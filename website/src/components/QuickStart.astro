---
import { quickstart } from "../content";
---

<!-- Quick Start Section -->
<section id="quickstart" class="px-6 py-24 sm:px-8 lg:px-16">
	<div class="mx-auto max-w-4xl">
		<div class="mb-16 text-center">
			<h2 class="mb-4 text-3xl font-bold text-white sm:text-4xl">
				{quickstart.title}
			</h2>
			<p class="text-xl text-gray-300">
				{quickstart.subtitle}
			</p>
		</div>

		<!-- Code example -->
		<div
			class="overflow-hidden rounded-xl border border-gray-700 bg-gray-900"
		>
			<div class="flex items-center justify-between bg-gray-800 px-6 py-3">
				<div class="flex items-center gap-2">
					<div class="h-3 w-3 rounded-full bg-red-500"></div>
					<div class="h-3 w-3 rounded-full bg-yellow-500"></div>
					<div class="h-3 w-3 rounded-full bg-green-500"></div>
				</div>
				<span class="text-sm text-gray-400">{quickstart.example.title}</span>
			</div>
			<pre class="overflow-x-auto p-6 text-sm"><code class="text-gray-300" set:html={quickstart.example.code
				.replace(/from/g, '<span class="text-pink-400">from</span>')
				.replace(/import/g, '<span class="text-pink-400">import</span>')
				.replace(/await/g, '<span class="text-pink-400">await</span>')
				.replace(/cogency/g, '<span class="text-blue-400">cogency</span>')
				.replace(/Agent/g, '<span class="text-white">Agent</span>')
				.replace(/agent/g, '<span class="text-white">agent</span>')
				.replace(/=/g, '<span class="text-pink-400">=</span>')
				.replace(/"[^"]*"/g, '<span class="text-green-400">$&</span>')
				.replace(/\.run\(/g, '.<span class="text-yellow-400">run</span>(')
				.replace(/#[^\n]*/g, '<span class="text-gray-500">$&</span>')
			}></code></pre>
		</div>

		<!-- Install command -->
		<div class="mt-8 text-center">
			<div
				class="inline-flex items-center rounded-lg border border-gray-600 bg-gray-800 px-6 py-3"
			>
				<span class="mr-3 text-gray-400">$</span>
				<code class="font-mono text-white">{quickstart.install.command}</code>
				<button
					class="ml-4 text-blue-400 transition-colors hover:text-blue-300"
				>
					<svg
						class="h-5 w-5"
						fill="none"
						stroke="currentColor"
						viewBox="0 0 24 24"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
						></path>
					</svg>
				</button>
			</div>
		</div>

		<!-- Features highlight -->
		<div class="mt-16 grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
			{quickstart.features.map((feature) => {
				const [emoji, ...textParts] = feature.split(' ');
				const text = textParts.join(' ');
				return (
					<div class="text-center">
						<div class="mb-2 text-2xl">{emoji}</div>
						<p class="text-sm text-gray-300">{text}</p>
					</div>
				);
			})}
		</div>
	</div>
</section>