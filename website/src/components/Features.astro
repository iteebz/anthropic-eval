---
import { features } from "../content";
---

<!-- Features Section -->
<section class="bg-gray-900/50 px-6 py-24 sm:px-8 lg:px-16">
	<div class="mx-auto max-w-6xl">
		<div class="mb-16 text-center">
			<h2 class="mb-4 text-3xl font-bold text-white sm:text-4xl">
				{features.title}
			</h2>
			<p class="text-xl text-gray-300">
				{features.subtitle}
			</p>
		</div>

		<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
			{features.grid.map((feature) => (
				<a
					href={feature.href}
					class="group rounded-xl border border-gray-700 bg-gray-800/50 p-8 backdrop-blur transition-all hover:border-blue-500/50 hover:bg-gray-800"
				>
					<div
						class="mb-4 inline-flex h-12 w-12 items-center justify-center rounded-lg bg-blue-500/10 text-blue-400"
					>
						<span class="text-2xl">{feature.emoji}</span>
					</div>
					<h3 class="mb-2 text-xl font-semibold text-white group-hover:text-blue-400 transition-colors">
						{feature.title}
					</h3>
					<p class="text-gray-300">
						{feature.description}
					</p>
					<div class="mt-4 flex items-center text-blue-400 group-hover:text-blue-300">
						<span class="text-sm font-medium">Learn more</span>
						<svg
							class="ml-2 h-4 w-4 transition-transform group-hover:translate-x-1"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M9 5l7 7-7 7"
							></path>
						</svg>
					</div>
				</a>
			))}
		</div>
	</div>
</section>