---
import { hero, type CTAVariant } from "../content";

// Map variant to CSS classes
const ctaStyles: Record<CTAVariant, string> = {
	primary: "bg-blue-600 text-white hover:bg-blue-500 focus:ring-blue-500/50",
	secondary: "border border-gray-600 bg-gray-800/50 text-white hover:bg-gray-700 focus:ring-gray-500/50"
};
---

<!-- Hero Section -->
<main class="relative flex min-h-screen items-center overflow-hidden">
	<!-- Background gradient -->
	<div
		class="absolute inset-0 bg-gradient-to-br from-blue-900/20 via-gray-950 to-purple-900/20"
	>
	</div>

	<!-- Content -->
	<div class="relative w-full px-6 py-24 sm:px-8 lg:px-16">
		<div class="mx-auto max-w-4xl text-center">
			<!-- Badge -->
			<div class="mb-8">
				<span
					class="inline-flex items-center rounded-full border border-green-500/20 bg-green-500/10 px-4 py-2 text-sm font-medium text-green-400"
				>
					{hero.badge.emoji} {hero.badge.text}
				</span>
			</div>

			<!-- Main headline -->
			<h1
				class="mb-6 text-5xl font-bold tracking-tight sm:text-6xl lg:text-7xl"
			>
				<span
					class="bg-gradient-to-r from-white via-blue-100 to-blue-200 bg-clip-text text-transparent"
				>
					{hero.headline.primary}
				</span>
				<br />
				<span class="text-blue-400">{hero.headline.secondary}</span>
			</h1>

			<!-- Subheadline -->
			<p class="mx-auto mb-10 max-w-2xl text-xl text-gray-300 sm:text-2xl">
				{hero.subheader[0]}
				<span class="font-medium text-white">{hero.subheader[1]}</span> {hero.subheader[2]}
				<span class="font-medium text-white">{hero.subheader[3]}</span>
			</p>

			<!-- CTA Buttons -->
			<div
				class="flex flex-col gap-4 sm:flex-row sm:justify-center sm:gap-6"
			>
				{hero.ctas.map((cta) => (
					<a
						href={cta.href}
						class={`inline-flex items-center justify-center rounded-lg px-6 py-3 text-base font-semibold transition-all focus:ring-4 ${ctaStyles[cta.variant]}`}
					>
						{cta.text}
					</a>
				))}
			</div>
		</div>
	</div>
</main>