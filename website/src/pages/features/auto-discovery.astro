---
import Layout from "../../components/Layout.astro";
import FeatureHero from "../../components/FeatureHero.astro";
import CodeBlock from "../../components/CodeBlock.astro";
import FeatureGrid from "../../components/FeatureGrid.astro";

const title = "Auto-Discovery AI Tools - Cogency";
const description =
	"Drop tools in /tools/ and they just work. Magic auto-discovery system that finds and loads your custom AI tools automatically. Zero configuration, maximum productivity.";
const keywords =
	"automatic tool discovery python, magic AI tool loading, auto-discovery AI framework, python tool autodiscovery, dynamic tool loading, ai agent tools";
const canonicalUrl = "https://cogency.dev/features/auto-discovery";

const relatedFeatures = [
	{
		href: "/features/zero-config",
		title: "Zero Configuration",
		description: "Auto-discovery works with zero additional setup.",
		icon: "M13 10V3L4 14h7v7l9-11h-7z",
		color: "blue"
	},
	{
		href: "/features/extensibility",
		title: "Highly Extensible",
		description: "Custom tools are automatically discovered too.",
		icon: "M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z",
		color: "cyan"
	},
	{
		href: "/features/streaming",
		title: "Streaming Execution",
		description: "Watch auto-discovered tools execute in real-time.",
		icon: "M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z",
		color: "purple"
	}
];
---

<Layout
	title={title}
	description={description}
	keywords={keywords}
	canonicalUrl={canonicalUrl}
>
	<FeatureHero
		badge="ðŸª„ Auto-Discovery"
		badgeColor="border-green-500/20 bg-green-500/10 text-green-400"
		title="Drop tools in"
		titleGradient="from-white via-green-100 to-green-200"
		subtitle="/tools/ and they just work"
		description="Magic auto-discovery system that finds and loads your custom AI tools automatically. Zero configuration, maximum productivity."
		ctaText="See the Magic"
		ctaLink="#example"
		ctaColor="bg-green-600 hover:bg-green-500 focus:ring-green-500/50"
	/>

	<!-- Magic Example -->
	<section id="example" class="px-6 py-16 sm:px-8 lg:px-16">
		<div class="mx-auto max-w-4xl">
			<div class="mb-12 text-center">
				<h2 class="mb-4 text-3xl font-bold text-white">The Magic in Action</h2>
				<p class="text-xl text-gray-300">
					Create a tool file and watch it instantly become available
				</p>
			</div>

			<div class="grid gap-8 lg:grid-cols-2">
				<div>
					<h3 class="mb-4 text-xl font-semibold text-white">
						1. Create your tool
					</h3>
					<CodeBlock title="tools/weather_tool.py">
						<span class="text-pink-400">from</span>
						<span class="text-blue-400">cogency.tools.base</span>
						<span class="text-pink-400">import</span>
						<span class="text-white">Tool</span>

						<span class="text-pink-400">class</span>
						<span class="text-yellow-400">WeatherTool</span><span
							class="text-white">(</span
						><span class="text-yellow-400">Tool</span><span
							class="text-white">):</span
						>
						<span class="text-pink-400">def</span>
						<span class="text-blue-400">__init__</span><span class="text-white"
							>(</span
						><span class="text-blue-400">self</span><span class="text-white"
							>):</span
						>
						<span class="text-yellow-400">super</span><span class="text-white"
							>()</span
						><span class="text-white">.</span><span class="text-yellow-400"
							>__init__</span
						><span class="text-white">(</span>
						<span class="text-blue-400">name</span><span class="text-pink-400"
							>=</span
						><span class="text-green-400">"weather"</span><span
							class="text-white">,</span
						>
						<span class="text-blue-400">description</span><span
							class="text-pink-400">=</span
						><span class="text-green-400">"Get weather info"</span>
						<span class="text-white">)</span>

						<span class="text-pink-400">async</span>
						<span class="text-pink-400">def</span>
						<span class="text-blue-400">run</span><span class="text-white"
							>(</span
						><span class="text-blue-400">self</span><span class="text-white"
							>,</span
						>
						<span class="text-blue-400">city</span><span class="text-white"
							>):</span
						>
						<span class="text-gray-500"># Your weather logic</span>
						<span class="text-pink-400">return</span>
						<span class="text-white"
							>{}<span class="text-green-400">"temp"</span><span
								class="text-white">:</span
							>
							<span class="text-green-400">"22Â°C"</span><span class="text-white"
							></span></span
						>
					</CodeBlock>
				</div>

				<div>
					<h3 class="mb-4 text-xl font-semibold text-white">
						2. Use it immediately
					</h3>
					<CodeBlock title="agent.py">
						<span class="text-pink-400">from</span>
						<span class="text-blue-400">cogency.agent</span>
						<span class="text-pink-400">import</span>
						<span class="text-white">Agent</span>

						<span class="text-gray-500"
							># Agent automatically finds your tool!</span
						>
						<span class="text-white">agent</span>
						<span class="text-pink-400">=</span>
						<span class="text-yellow-400">Agent</span><span class="text-white"
							>(</span
						><span class="text-blue-400">name</span><span class="text-pink-400"
							>=</span
						><span class="text-green-400">"Helper"</span><span
							class="text-white">)</span
						>

						<span class="text-gray-500"
							># Weather tool is automatically available</span
						>
						<span class="text-white">result</span>
						<span class="text-pink-400">=</span>
						<span class="text-pink-400">await</span>
						<span class="text-white">agent</span><span class="text-white"
							>.</span
						><span class="text-yellow-400">run</span><span class="text-white"
							>(</span
						>
						<span class="text-green-400">"What's the weather in Tokyo?"</span>
						<span class="text-white">)</span>

						<span class="text-gray-500"
							># Agent: "I'll check the weather for you!"</span
						>
						<span class="text-gray-500"
							># *automatically calls weather tool*</span
						>
						<span class="text-gray-500"># Agent: "It's 22Â°C in Tokyo"</span>
					</CodeBlock>
				</div>
			</div>

			<div class="mt-8 rounded-xl border border-gray-700 bg-gray-800/50 p-6">
				<p class="text-center text-gray-300">
					<span class="font-semibold text-green-400">Pure magic!</span> No imports,
					no registration, no configuration. Just drop the file and it works.
				</p>
			</div>
		</div>
	</section>

	<!-- How it Works -->
	<section class="bg-gray-900/50 px-6 py-16 sm:px-8 lg:px-16">
		<div class="mx-auto max-w-6xl">
