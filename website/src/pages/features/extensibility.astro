---
import Layout from "../../components/Layout.astro";
import FeatureHero from "../../components/FeatureHero.astro";
import CodeBlock from "../../components/CodeBlock.astro";
import FeatureGrid from "../../components/FeatureGrid.astro";
import { features } from "../../feature-content";

const title = "Highly Extensible AI Framework - Cogency";
const description =
	"Build unlimited custom tools and extend every aspect of Cogency. From simple functions to complex integrations, extensibility is built into the core architecture.";
const keywords =
	"extensible AI framework python, custom AI tools python, AI agent extensibility, modular AI framework, python AI tool development";
const canonicalUrl = "https://cogency.dev/features/extensibility";

const relatedFeatures = [
	{
		href: "/features/zero-config",
		title: "Zero Configuration",
		description: "Extensions work with zero additional setup.",
		icon: "M13 10V3L4 14h7v7l9-11h-7z",
		color: "blue"
	},
	{
		href: "/features/auto-discovery",
		title: "Auto-Discovery",
		description: "Custom tools are automatically discovered and loaded.",
		icon: "M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z",
		color: "green"
	},
	{
		href: "/features/production-ready",
		title: "Production Ready",
		description: "Extensions scale seamlessly to production workloads.",
		icon: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z",
		color: "emerald"
	}
];
---

<Layout
	title={title}
	description={description}
	keywords={keywords}
	canonicalUrl={canonicalUrl}
>
	<FeatureHero
		badge={features.extensibility.badge}
		badgeColor={features.extensibility.badgeColor}
		title={features.extensibility.title}
		titleGradient={features.extensibility.titleGradient}
		subtitle={features.extensibility.subtitle}
		description={features.extensibility.description}
		ctaText={features.extensibility.ctaText}
		ctaLink="#custom-tools"
		ctaColor={features.extensibility.ctaColor}
	/>

	<!-- Custom Tools Section -->
	<section id="custom-tools" class="px-6 py-16 sm:px-8 lg:px-16">
		<div class="mx-auto max-w-4xl">
			<div class="mb-12 text-center">
				<h2 class="mb-4 text-3xl font-bold text-white">
					Custom Tools in Minutes
				</h2>
				<p class="text-xl text-gray-300">
					Create powerful tools with just a few lines of code
				</p>
			</div>

			<CodeBlock title="tools/database_tool.py">
				<span class="text-pink-400">from</span>
				<span class="text-blue-400">cogency.tools.base</span>
				<span class="text-pink-400">import</span>
				<span class="text-white">Tool</span>
				<span class="text-pink-400">import</span>
				<span class="text-blue-400">sqlite3</span>

				<span class="text-pink-400">class</span>
				<span class="text-yellow-400">DatabaseTool</span><span
					class="text-white">(</span
				><span class="text-yellow-400">Tool</span><span class="text-white"
					>):</span
				>
				<span class="text-pink-400">def</span>
				<span class="text-blue-400">__init__</span><span class="text-white"
					>(</span
				><span class="text-blue-400">self</span><span class="text-white"
					>):</span
				>
				<span class="text-yellow-400">super</span><span class="text-white"
					>()</span
				><span class="text-white">.</span><span class="text-yellow-400"
					>__init__</span
				><span class="text-white">(</span>
				<span class="text-blue-400">name</span><span class="text-pink-400"
					>=</span
				><span class="text-green-400">"database_query"</span><span
					class="text-white">,</span
				>
				<span class="text-blue-400">description</span><span
					class="text-pink-400">=</span
				><span class="text-green-400"
					>"Execute SQL queries on the database"</span
				>
				<span class="text-white">)</span>

				<span class="text-pink-400">async</span>
				<span class="text-pink-400">def</span>
				<span class="text-blue-400">run</span><span class="text-white">(</span
				><span class="text-blue-400">self</span><span class="text-white">,</span
				>
				<span class="text-blue-400">query</span><span class="text-white">:</span
				>
				<span class="text-yellow-400">str</span><span class="text-white"
					>):</span
				>
				<span class="text-gray-500"># Your database logic here</span>
				<span class="text-white">conn</span>
				<span class="text-pink-400">=</span>
				<span class="text-white">sqlite3</span><span class="text-white">.</span
				><span class="text-yellow-400">connect</span><span class="text-white"
					>(</span
				><span class="text-green-400">"app.db"</span><span class="text-white"
					>)</span
				>
				<span class="text-white">result</span>
				<span class="text-pink-400">=</span>
				<span class="text-white">conn</span><span class="text-white">.</span
				><span class="text-yellow-400">execute</span><span class="text-white"
					>(</span
				><span class="text-white">query</span><span class="text-white">)</span
				><span class="text-white">.</span><span class="text-yellow-400"
					>fetchall</span
				><span class="text-white">()</span>
				<span class="text-pink-400">return</span>
				<span class="text-white"
					>{}<span class="text-green-400">"data"</span><span class="text-white"
						>:</span
					>
					<span class="text-white">result</span><span class="text-white"
					></span></span
				>

				<span class="text-gray-500"
					># That's it! Auto-discovered and ready to use</span
				>
			</CodeBlock>

			<div class="mt-8 rounded-xl border border-gray-700 bg-gray-800/50 p-6">
				<p class="text-center text-gray-300">
					<span class="font-semibold text-cyan-400">Instantly available!</span> Drop
					this file in your tools/ directory and your agent can now query databases
					naturally.
				</p>
			</div>
		</div>
	</section>

	<!-- Extension Types -->
	<section class="bg-gray-900/50 px-6 py-16 sm:px-8 lg:px-16">
		<div class="mx-auto max-w-6xl">
			<h2 class="mb-12 text-center text-3xl font-bold text-white">
				What You Can Extend
			</h2>
			<div class="grid gap-8 lg:grid-cols-3">
				<div class="rounded-xl border border-gray-700 bg-gray-800/50 p-6">
					<div
						class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-blue-500/10"
					>
						<svg
							class="h-6 w-6 text-blue-400"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
							></path>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
						</svg>
					</div>
					<h3 class="mb-4 text-xl font-bold text-white">Custom Tools</h3>
					<ul class="space-y-2 text-gray-300">
						<li>• API integrations</li>
						<li>• Database connections</li>
						<li>• File operations</li>
						<li>• External services</li>
						<li>• Domain-specific logic</li>
					</ul>
				</div>

				<div class="rounded-xl border border-gray-700 bg-gray-800/50 p-6">
					<div
						class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-green-500/10"
					>
						<svg
							class="h-6 w-6 text-green-400"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
							></path>
						</svg>
					</div>
					<h3 class="mb-4 text-xl font-bold text-white">Reasoning Nodes</h3>
					<ul class="space-y-2 text-gray-300">
						<li>• Custom plan strategies</li>
						<li>• Specialized reasoning</li>
						<li>• Domain-specific actions</li>
						<li>• Custom reflection logic</li>
						<li>• Response formatting</li>
					</ul>
				</div>

				<div class="rounded-xl border border-gray-700 bg-gray-800/50 p-6">
					<div
						class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-purple-500/10"
					>
						<svg
							class="h-6 w-6 text-purple-400"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
							></path>
						</svg>
					</div>
					<h3 class="mb-4 text-xl font-bold text-white">LLM Providers</h3>
					<ul class="space-y-2 text-gray-300">
						<li>• Custom model APIs</li>
						<li>• Local model hosting</li>
						<li>• Specialized prompting</li>
						<li>• Custom streaming</li>
						<li>• Model routing</li>
					</ul>
				</div>
			</div>
		</div>
	</section>

	<!-- Advanced Extension Example -->
	<section class="px-6 py-16 sm:px-8 lg:px-16">
		<div class="mx-auto max-w-4xl">
			<div class="mb-12 text-center">
				<h2 class="mb-4 text-3xl font-bold text-white">
					Advanced: Custom Reasoning Node
				</h2>
				<p class="text-xl text-gray-300">
					Override the reasoning process for specialized behavior
				</p>
			</div>

			<CodeBlock title="nodes/domain_reasoning.py">
				<span class="text-pink-400">from</span>
				<span class="text-blue-400">cogency.nodes.reason</span>
				<span class="text-pink-400">import</span>
				<span class="text-white">reason</span>
				<span class="text-pink-400">from</span>
				<span class="text-blue-400">cogency.types</span>
				<span class="text-pink-400">import</span>
				<span class="text-white">State</span>

				<span class="text-pink-400">async</span>
				<span class="text-pink-400">def</span>
				<span class="text-blue-400">medical_reasoning</span><span
					class="text-white">(</span
				><span class="text-blue-400">state</span><span class="text-white"
					>:</span
				>
				<span class="text-yellow-400">State</span><span class="text-white"
					>):</span
				>
				<span class="text-green-400"
					>"""Custom reasoning for medical diagnosis agents."""</span
				>

				<span class="text-gray-500"
					># Add medical-specific reasoning patterns</span
				>
				<span class="text-white">medical_context</span>
				<span class="text-pink-400">=</span>
				<span class="text-green-400"
					>""" Consider differential diagnosis: 1. Most common conditions first
					2. Rule out serious conditions 3. Consider patient history and
					symptoms """</span
				>

				<span class="text-gray-500"
					># Enhance the reasoning with domain knowledge</span
				>
				<span class="text-white">enhanced_state</span>
				<span class="text-pink-400">=</span>
				<span class="text-white">state</span><span class="text-white">.</span
				><span class="text-yellow-400">copy</span><span class="text-white"
					>()</span
				>
				<span class="text-white">enhanced_state</span><span class="text-white"
					>[</span
				><span class="text-green-400">"medical_context"</span><span
					class="text-white">]</span
				>
				<span class="text-pink-400">=</span>
				<span class="text-white">medical_context</span>

				<span class="text-gray-500"
					># Call the standard reasoning with enhancements</span
				>
				<span class="text-pink-400">return</span>
				<span class="text-pink-400">await</span>
				<span class="text-yellow-400">reason</span><span class="text-white"
					>(</span
				><span class="text-white">enhanced_state</span><span class="text-white"
					>)</span
				>

				<span class="text-gray-500"># Register your custom node</span>
				<span class="text-white">agent</span><span class="text-white">.</span
				><span class="text-yellow-400">workflow</span><span class="text-white"
					>.</span
				><span class="text-yellow-400">add_node</span><span class="text-white"
					>(</span
				><span class="text-green-400">"reason"</span><span class="text-white"
					>,</span
				>
				<span class="text-white">medical_reasoning</span><span
					class="text-white">)</span
				>
			</CodeBlock>
		</div>
	</section>

	<!-- Plugin Ecosystem -->
	<section class="bg-gray-900/50 px-6 py-16 sm:px-8 lg:px-16">
		<div class="mx-auto max-w-6xl">
			<h2 class="mb-12 text-center text-3xl font-bold text-white">
				Growing Plugin Ecosystem
			</h2>
			<div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
				<div
					class="rounded-xl border border-gray-700 bg-gray-800/50 p-6 text-center"
				>
					<div
						class="mx-auto mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-red-500/10"
					>
						<span class="text-2xl">🌐</span>
					</div>
					<h3 class="mb-2 text-lg font-semibold text-white">Web Tools</h3>
					<p class="text-sm text-gray-300">Scraping, APIs, automation</p>
				</div>

				<div
					class="rounded-xl border border-gray-700 bg-gray-800/50 p-6 text-center"
				>
					<div
						class="mx-auto mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-blue-500/10"
					>
						<span class="text-2xl">📊</span>
					</div>
					<h3 class="mb-2 text-lg font-semibold text-white">Data Tools</h3>
					<p class="text-sm text-gray-300">Analysis, visualization, ML</p>
				</div>

				<div
					class="rounded-xl border border-gray-700 bg-gray-800/50 p-6 text-center"
				>
					<div
						class="mx-auto mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-green-500/10"
					>
						<span class="text-2xl">🏢</span>
					</div>
					<h3 class="mb-2 text-lg font-semibold text-white">Enterprise</h3>
					<p class="text-sm text-gray-300">CRM, ERP, workflows</p>
				</div>

				<div
					class="rounded-xl border border-gray-700 bg-gray-800/50 p-6 text-center"
				>
					<div
						class="mx-auto mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-purple-500/10"
					>
						<span class="text-2xl">🤖</span>
					</div>
					<h3 class="mb-2 text-lg font-semibold text-white">AI Tools</h3>
					<p class="text-sm text-gray-300">Vision, audio, specialized models</p>
				</div>
			</div>
		</div>
	</section>

	<FeatureGrid
		title="Extensibility Meets Simplicity"
		features={relatedFeatures}
	/>

	<!-- CTA -->
	<section class="px-6 py-16 sm:px-8 lg:px-16">
		<div class="mx-auto max-w-4xl text-center">
			<h2 class="mb-6 text-3xl font-bold text-white">
				Ready to Extend Cogency?
			</h2>
			<p class="mb-8 text-xl text-gray-300">
				Build custom tools and extend every aspect of Cogency's architecture
			</p>
			<div class="flex flex-col gap-4 sm:flex-row sm:justify-center sm:gap-6">
				<a
					href="/"
					class="inline-flex items-center justify-center rounded-lg bg-cyan-600 px-8 py-4 text-lg font-semibold text-white transition-all hover:bg-cyan-500 focus:ring-4 focus:ring-cyan-500/50"
				>
					Start Extending
					<svg
						class="ml-2 h-5 w-5"
						fill="none"
						stroke="currentColor"
						viewBox="0 0 24 24"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M13 7l5 5-5 5M6 12h12"></path>
					</svg>
				</a>
				<a
					href="https://github.com/iteebz/cogency"
					class="inline-flex items-center justify-center rounded-lg border border-gray-600 bg-gray-800/50 px-8 py-4 text-lg font-semibold text-white transition-all hover:bg-gray-700"
				>
					<svg class="mr-2 h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
						<path
							d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
						></path>
					</svg>
					View on GitHub
				</a>
			</div>
		</div>
	</section>
</Layout>
