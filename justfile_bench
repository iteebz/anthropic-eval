#!/usr/bin/env -S just --justfile

# Benchmarked evaluation commands

# Run evals with detailed benchmarking
eval-bench *args="":
    poetry run python -m src.cogency.evals.cli --benchmark {{args}}

# Show benchmark report from latest run
bench-report:
    @find .cogency/evals -name "*benchmarked*.json" -exec ls -t {} + | head -1 | xargs cat | jq '.benchmarks[0].phase_timing'